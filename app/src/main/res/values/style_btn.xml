<?xml version="1.0" encoding="utf-8"?><!--——按钮相关——-->
<resources>
    <!--基础按钮，定义高度-->
    <style name="btn_base">
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--红色按钮的字体颜色-->
    <style name="tv_btn_bottom">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <!--红色按钮的字体颜色-->
    <style name="tv_btn_bottom_blue_common" parent="tv_btn_bottom">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/white</item>
        <!--<item name="android:background">@drawable/bg_border_corners_green</item>-->
    </style>

    <!--底部按钮公共LinearLayout-->
    <style name="ll_btn_bottom_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/white</item>
    </style>

    <!--底部按钮公共LinearLayout（内部的）-->
    <style name="ll_btn_bottom_common_inner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/btn_bottom_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/btn_bottom_margin_bottom</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ll_btn_bottom_common_sure_cancel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_15</item>
        <item name="android:layout_marginBottom">@dimen/dp_15</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="ll_btn_bottom_common.auth">
        <!--Override-->
        <item name="android:background">@null</item>
    </style>

    <!--底部两个按钮的ripple公共-->
    <style name="ripple_btn_bottom_double">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16</item>

    </style>

    <!--底部两个按钮：左侧绿色-->
    <style name="ripple_btn_bottom_double.left" parent="ripple_btn_bottom_double">
        <item name="android:layout_marginLeft">@dimen/btn_single_bottom_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/btn_double_bottom_margin_left_right</item>
    </style>

    <!--底部两个按钮的ripple，按钮的包裹壳儿（左边）-->
    <style name="ripple_btn_bottom_double.left.green" parent="ripple_btn_bottom_double.left">
        <item name="android:background">@drawable/bg_border_corners_green</item>
    </style>

    <!--底部两个按钮的ripple，按钮的包裹壳儿（左边）-->
    <style name="ripple_btn_bottom_sure" parent="ripple_btn_bottom_double">
        <item name="android:layout_marginLeft">@dimen/dp_8</item>
        <item name="android:layout_marginRight">@dimen/dp_16</item>
    </style>

    <style name="ripple_btn_bottom_cancel" parent="ripple_btn_bottom_double">
        <item name="android:layout_marginLeft">@dimen/dp_16</item>
        <item name="android:layout_marginRight">@dimen/dp_8</item>
    </style>

    <!--底部两个按钮的ripple，按钮的包裹壳儿（左边）-->
    <style name="ripple_btn_bottom_double.green.left" parent="ripple_btn_bottom_double">
        <item name="android:layout_marginLeft">@dimen/btn_single_bottom_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/btn_double_bottom_margin_left_right</item>
        <item name="android:background">@drawable/bg_border_corners_green</item>
    </style>


    <!--底部两个按钮的ripple，按钮的包裹壳儿（右边）-->
    <style name="ripple_btn_bottom_double.right" parent="ripple_btn_bottom_double">
        <item name="android:layout_marginLeft">@dimen/btn_double_bottom_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/btn_single_bottom_margin_left_right</item>
    </style>

    <!--底部两个按钮：右侧黄色-->
    <style name="ripple_btn_bottom_double.right.blue" parent="ripple_btn_bottom_double.right">
        <item name="android:background">@drawable/bg_border_corners_blue</item>
    </style>

    <style name="ripple_btn_bottom_double.right.grey" parent="ripple_btn_bottom_double.right">
        <item name="android:background">@drawable/bg_border_corners_grey</item>
    </style>

    <!--底部单个按钮的ripple，包含横线-->
    <style name="ripple_btn_bottom_single">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/btn_bottom_margin_top</item>
        <item name="android:layout_marginLeft">@dimen/btn_single_bottom_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/btn_single_bottom_margin_left_right</item>
        <item name="android:layout_marginBottom">@dimen/btn_bottom_margin_bottom</item>
        <item name="android:background">@drawable/bg_border_corners_green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--底部单个：绿色按钮-->
    <style name="ripple_btn_bottom_single_navy_blue" parent="ripple_btn_bottom_single">
        <item name="android:background">@drawable/bg_border_corners_green</item>
    </style>

    <!--红色按钮的字体颜色-->
    <style name="tv_btn_bottom_red" parent="tv_btn_bottom">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/button_text_cancel_666666</item>
    </style>

    <!--&lt;!&ndash;底部红色按钮的ripple&ndash;&gt;-->
    <style name="ripple_btn_bottom_single_grey" parent="ripple_btn_bottom_single">
        <item name="android:background">@drawable/bg_border_corners_grey</item>
    </style>

    <!--底部红色按钮的ripple-->
    <style name="ripple_btn_bottom_single_yellow" parent="ripple_btn_bottom_single">
        <item name="android:background">@drawable/bg_border_corners_blue</item>
    </style>

    <!---->
    <style name="ripple_btn_bottom_single_green" parent="ripple_btn_bottom_single">
        <item name="android:background">@drawable/bg_border_corners_green</item>
    </style>

    <!--青色按钮：ok-->
    <style name="btn_light_green" parent="btn_base">
        <item name="android:background">@color/tv_btn_blue_common</item>
        <item name="android:textColor">@color/main_green_26a65b</item>
    </style>

    <style name="MenuLabelsStyle">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
