<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBase" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorPrimary">@color/main_green_deliver</item>
        <item name="android:colorAccent">@color/main_green_26a65b</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">#cc242424</item>
        <!--<item name="colorPrimaryDark">@color/main_green_26a65b</item>-->
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
        <!--<item name="lineColor">@color/border_line_e8e8e8</item>-->
        <!--<item name="textColor">@color/tv_value</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>
        <item name="android:colorControlHighlight">@color/tv_name</item>
        <item name="windowActionModeOverlay">true</item>

    </style>

    <style name="MenuTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>

    <style name="AppBase.Dark" parent="Theme.AppCompat">
        <item name="android:actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="MainActivityStyle" parent="AppBase">
        <item name="android:windowIsTranslucent">false</item>
    </style>
</resources>